              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Doctor creado', function () {",
                  "  pm.expect(pm.response.code).to.eql(201);",
                  "});",
                  "const data = pm.response.json();",
                  "pm.collectionVariables.set('doctor_id', data.id);"
