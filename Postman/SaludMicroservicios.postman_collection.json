            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const token = (pm.response.json() || {}).token || '';",
                  "pm.collectionVariables.set('doctor_token', token);",
                  "pm.test('Token de doctor recibido', function () {",
                  "  pm.expect(token.length).to.be.above(0);",
                  "});"
                ]
              }
            }
          ]
