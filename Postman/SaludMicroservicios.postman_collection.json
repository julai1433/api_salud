{
  "info": {
    "name": "Microservicios Salud",
    "_postman_id": "f6c1c4cc-64be-4e54-9f11-collection-demo",
    "description": "Colección de endpoints de los microservicios de pacientes y expedientes.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (!pm.collectionVariables.get('initialized')) {",
          "  const unique = Date.now().toString().slice(-6);",
          "  pm.collectionVariables.set('uniqueId', unique);",
          "  if (!pm.collectionVariables.get('pacientes_base')) {",
          "    pm.collectionVariables.set('pacientes_base', 'http://127.0.0.1:8001');",
          "  }",
          "  if (!pm.collectionVariables.get('expedientes_base')) {",
          "    pm.collectionVariables.set('expedientes_base', 'http://127.0.0.1:8002');",
          "  }",
          "  pm.collectionVariables.set('doctor_email', 'doctor-' + unique + '@clinic.com');",
          "  pm.collectionVariables.set('doctor_password', 'password123');",
          "  pm.collectionVariables.set('doctor_token', '');",
          "  pm.collectionVariables.set('doctor_id', '');",
          "  pm.collectionVariables.set('paciente_a_email', 'paciente-a-' + unique + '@example.com');",
          "  pm.collectionVariables.set('paciente_a_password', 'paciente123');",
          "  pm.collectionVariables.set('paciente_a_nss', 'NSS-A-' + unique);",
          "  pm.collectionVariables.set('paciente_a_id', '');",
          "  pm.collectionVariables.set('paciente_a_token', '');",
          "  pm.collectionVariables.set('paciente_b_email', 'paciente-b-' + unique + '@example.com');",
          "  pm.collectionVariables.set('paciente_b_password', 'paciente123');",
          "  pm.collectionVariables.set('paciente_b_nss', 'NSS-B-' + unique);",
          "  pm.collectionVariables.set('paciente_b_id', '');",
          "  pm.collectionVariables.set('insecure_query', \"' OR '1'='1\");",
          "  pm.collectionVariables.set('initialized', 'true');",
          "}"
        ]
      }
    }
  ],
